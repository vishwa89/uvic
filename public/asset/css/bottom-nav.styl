.footer
	
	position:absolute
	bottom:0
	width:100%
	height: 60px
	background-color: #fff
	

 	.container
		border-top:1px solid #929497
		padding:0
		padding-top: 10px
		

	.info-tab
		height:14pt

		li
			border-left:1px solid #000

			&:first-child,&:nth-child(2)
				border-left:0

		li
			font-size:14pt
			height:16pt
			color:#6D6E70

			a
				font-size:14pt
				padding-top: 0
				margin-top: 0
				color:#6D6E70

				&:hover,&:focus
					text-decoration:none
					color:#6D6E70
