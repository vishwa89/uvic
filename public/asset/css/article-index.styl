#articleIndex
	.heading-tabs
		border:0
		height:22px
		width: 90%
		margin-left:5%
		

		li
			padding: 0
			margin: 0
			width:15%
			text-align: center
			border-right:1px solid #929497
			height:21px

			&:first-child
				width:19%
				

		

			&:nth-child(4)
				.icons
					background-position: 30% 0

			&:nth-child(5)
				.icons
					background-position: 63% 0
	

			&:last-child
				border-right:0
					
				.icons
					background-position: 100% 0



			a
				color:#929497
				font-size:14pt
				line-height: 21px



				&:hover
					text-decoration: none
	
	.go-back
		font-size:12pt
		padding-top:10px
		padding-bottom:10px
		color:#929497
		margin-top:15px
		margin-bottom:10px
		border-top:1px solid #929497
		border-bottom:1px dotted #929497
		margin-left:5%
		margin-right:5%
		.breadcrumb
			margin:0
			padding:0
			border-radius:0
			border:0
			background-color:transparent
			li
				a
					font-size:12pt
					color:#929497
					
					&:hover
						text-decoration:none

	.sidebar
		margin-left:5%
		height:700px
		
		ul
			
			li
				margin:0
				border-top:1px dotted #929497
				
				
				font-size:16pt
				padding:0
				background-color:#f5f5f5
				height:30px


				a
					color:#929497
					padding:0
					padding-left:5%

					&:hover,&:focus
						background-color:#f5f5f5

				&:nth-child(2)
					border:0
				
				&.header
					background-color:#282561
					height:50px
					padding-top:10px
					border:0
					border-bottom:2px solid #fff
					
					a

						color:#fff
						font-size:16pt
						&:hover,&:focus
							background-color:#282561

				&.uvic
					+ li
							border:0


				&.active
					background-color:transparent

					a
						color:#282561

						&:hover,&:focus
							background-color:transparent
	.articles
		margin-left:5%


		.media
			border-bottom:1px dotted #929497
			height:180px
			.heading
				color:#929497
				h4
					margin-top:0
					font-size:20pt
					border-bottom:1px solid #929497

				p
					font-size:16pt
	.paginate
		margin-top:20px
		
		li
			a

				font-size:12pt
				color:#929497

