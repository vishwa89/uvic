#ukArticleIndex
	.heading-tabs
		border:0
		height:22px
		width: 90%
		margin-left:7%

		&.bottom
			margin-top:20px
			height:50px
			padding-top:15px
			margin-bottom:-60px
			border-top:1px solid #929497
			width:1170px
			margin-left:60px
			li
				&.active
					&:before
						top:92%
						left:43%


		li
			padding: 0
			margin: 0
			width:15%
			text-align: center
			border-right:1px solid #929497
			height:21px

			&:first-child
				width:19%
				

		

			&:nth-child(4)
				.icons
					background-position: 30% 0

			&:nth-child(5)
				.icons
					background-position: 63% 0
	

			&:last-child
				border-right:0
					
				.icons
					background-position: 100% 0
			&.active
				&:before
					content: "\f0d7"
					font-family: FontAwesome
					font-style: normal
					font-weight: normal
					text-decoration: inherit
					position:absolute
					top:86px
					left:45%
					font-size:24px
					color:#282561
				a
					font-weight:800
					color:#282561




			a
				color:#929497
				font-size:14pt
				line-height: 21px



				&:hover
					text-decoration: none
	
	.go-back
		font-size:12pt
		padding-top:10px
		padding-bottom:10px
		color:#929497
		margin-top:15px
		margin-bottom:10px
		border-top:1px solid #929497
		border-bottom:1px dotted #929497
		margin-left:5%
		margin-right:5%
		.breadcrumb
			margin:0
			padding:0
			border-radius:0
			border:0
			background-color:transparent
			li
				a
					font-size:12pt
					color:#929497
					
					&:hover
						text-decoration:none

	.sidebar
		margin-left:5%
		height:700px

		&.col-lg-2
			width:19% 
		
		ul
			
			li
				margin:0
				border-top:1px dotted #929497
				
				
				font-size:16pt
				padding:0
				background-color:#f5f5f5
				height:30px


				a
					color:#929497
					padding:0
					padding-left:5%
					display:inline-block

					&:hover,&:focus
						background-color:#f5f5f5

				&:nth-child(2)
					border:0
				
				&.header
					background-color:#929497
					height:55px
					padding-top:10px
					border:0
					
					&.active
						background-color:#888

					.icons
						height:25px
						width:35px
						margin-left:5%
					
					&.registration
						.icons
							background-image:url("../img/icon5.png")
					&.financial
						.icons
							background-image:url("../img/icon.png")
					&.accommodation
						.icons
							background-image:url("../img/icon2.png")
							height:28px
							
					&.uk-diary
						.icons
							background-image:url("../img/icon3.png")
							height:30px
							
				
					a

						color:#fff
						font-size:16pt
						&:hover,&:focus
							background-color:#929497

				&.uvic
					+ li
							border:0


				&.active
					background-color:transparent

					a
						font-weight:800

						&:hover,&:focus
							background-color:transparent
	.articles
		margin-left:3%


		.media
			border-bottom:1px dotted #929497
			height:180px

			.media-img
				height:180px
				img
					width:96%
					height:160px


			.heading
				color:#929497
				h4
					margin-top:0
					font-size:20pt
					border-bottom:1px solid #929497

				p
					font-size:16pt
	.paginate
		margin-top:20px
		padding-left:1%
		
		li
			a
				padding-left:3px
				padding-right:3px
				font-size:12pt
				color:#929497

				&:hover,&:focus
					text-decoration:none

			&.active
				a
					background-color:#929497
					color:#fff

