#homepage
	.heading-tabs
		border:0
		height:40px
		width: 960px
		margin-left:15%
		padding:0
		

		li
			padding: 0
			margin: -3px
			width:20%
			text-align: center
			height:42px
			padding-top:10px


			&:nth-child(2)
				.icons
					background-image:url('../img/lifeinuk.png')
					height:23px
					width:23px

			&:nth-child(3)
				.icons
					background-position: 30% 0



			&:nth-child(4)
				.icons
					background-position: 60% 0

			&:nth-child(5)
				.icons
					background-position: 63% 0
	

			&:last-child
				border-right:0
					
				.icons
					background-position: 100% 0
				a
					border-right:0 !important

			&.active,&:hover,&:focus
				background-image:url('../img/down_arrow.png')
				background-repeat:no-repeat	
				background-position:49% 1%

				&:nth-child(2)
					background-position:45% 10%

				a
					font-weight:800
					


			a
				color:#929497
				font-size:12pt
				line-height: 21px
				border-right:1px solid #929497
				padding-right:15%


				&:hover
					text-decoration: none
	.banner
		background:url('../img/header.jpg') no-repeat center center fixed
		background-size:100%
		color:#fff
		text-align:center
		height:916px
		margin-bottom:-60px
		
	.education
		background-color:rgba(0,173,238,0.8)
		height: 100%

	.immigration
		background-color:rgba(40,37,97,0.8)
		text-align:center
		height: 100%

		



	h2

		margin:0
		font-weight: 600
		font-size: 31pt
		position: relative
		top: 45%
		transform: translateY(-45%)

	p
		font-size: 16pt
		position: relative
		top: 45%
		transform: translateY(-45%)

	
					


	





