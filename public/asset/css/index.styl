html
	position:relative
	height:100%

body
	height:100%
	

	#main
		width:100%
		height:85%

		.ng-scope
			
			height:100%


		.container
			padding: 0px 15px 0
			width:100%
			height:80%






.banner
	background:url('../img/header.jpg') no-repeat center center fixed
	color:#fff
	text-align:center
	height:80%

	.education
		background-color:rgba(0,173,238,0.8)
		height: 100%

	.immigration
		background-color:rgba(40,37,97,0.8)
		text-align:center
		height: 100%

		.icons
			list-style-type: none
			position: absolute
			top: 2%
			right:0

			li
				background-color: #fff
				margin-bottom: 10px
				height:30px
				width:30px

				i
					color:#000



	h2

		margin:0
		font-weight: 600
		font-size: 33pt
		position: relative
		top: 45%
		transform: translateY(-45%)

	p
		font-size: 18pt
		position: relative
		top: 45%
		transform: translateY(-45%)

.valuable-articles
	margin-top: 20px
	margin-bottom:20px
	height: 80px

	p
		text-align:center
		color:#6D6E70
		font-size:12pt

	ul
		border:1px solid #000
		border-radius:10px
		height:22px
		width: 100%

		li
			padding: 0
			margin: 0
			width:24%
			text-align: center
			border-right:1px solid #000
			height:21px

			a
				color:#6D6E70
				font-size:12pt
				line-height: 21px

				&:hover
					text-decoration: none

			&:last-child
				border-right:0


	





