#educationHomepage
	.heading-tabs
		border:0
		height:40px
		width: 90%
		margin-left:5%
		

		li
			padding: 0
			margin: -2px
			width:15%
			text-align: center
			height:42px
			padding-top:10px

			

			&:nth-child(1)
				width:19%
				.icons
					background-image:url('../img/visa_policy_icon.png')
					height:22px
					width:30px

				a
					padding-right:5% !important 

			&:nth-child(3)
				.icons
					background-image:url('../img/lifeinuk.png')
					height:23px
					width:23px
				

		

			&:nth-child(4)
				.icons
					background-position: 30% 0

			&:nth-child(5)
				.icons
					background-position: 63% 0
				a
					padding-right:5% !important

			&:last-child
				border-right:0
				width:17%
					
				.icons
					background-position: 100% 0
				a
					border-right:0 !important

			&.active,&:hover,&:focus
				background-image:url('../img/down_arrow.png')
				background-repeat:no-repeat	
				background-position:49% 1%

				&:nth-child(1)
					background-position:45% 4%

				&:nth-child(3)
					background-position:45% 7%

				a
					font-weight:800




			a
				color:#929497
				font-size:14pt
				line-height: 21px
				border-right:1px solid #929497
				padding-right:8%



				&:hover
					text-decoration: none
	
	.banner
		background:url('../img/banner.jpg') no-repeat
		height:350px
		background-size:100%
		
		

	.search-info
		background:url('../img/eduhome-04.jpg') no-repeat
		height:350px
		background-size:100%
		margin-bottom:25px


		.tabbed-info
			background-color: rgba(0,173,238, 0.87)
			height:350px
			
			h2
				margin-top:0
				color:#fff
				text-align:center
				position: relative
				top: 45%
				transform: translateY(-45%)

	.categories
		height:700px
		h2
			background-color:rgba(0,173,238, 0.87)
			color:#fff
			font-size:28pt
			height:60px
			margin-top:0
			padding-top:10px
			padding-bottom:10px
			padding-left:4%

		.icons
			background-image:url('../img/icon.png') 
			vertical-align:0%
			height:26px

		.data
			background-color:rgba(0,173,238, 0.87)
			width:100%
			
			height:180px
			position:absolute
			bottom:0
			padding-top:10px

			ul
				float:left
				margin-left:7%
				margin-top:2%
				
				li
					a
						color:#fff

						&:hover,&:focus
							text-decoration:none




		.level
			background:url('../img/eduhome-03.jpg') no-repeat
			background-size:100%
			height:350px
			position:relative
			width:98%
			margin-bottom:2%
			

		.articles
			background:url('../img/eduhome-04.jpg') no-repeat
			background-size:100%
			height:350px
			position:relative
			width:98%
			

			
			h2
				background-color:rgba(237,46,124,0.87)
