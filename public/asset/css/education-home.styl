#educationHomepage
	.heading-tabs
		border:0
		height:22px
		width: 90%
		margin-left:5%
		

		li
			padding: 0
			margin: 0
			width:15%
			text-align: center
			border-right:1px solid #929497
			height:21px
			

			&:first-child
				width:19%
				

		

			&:nth-child(4)
				.icons
					background-position: 30% 0

			&:nth-child(5)
				.icons
					background-position: 63% 0
	

			&:last-child
				border-right:0
					
				.icons
					background-position: 100% 0



			a
				color:#929497
				font-size:14pt
				line-height: 21px



				&:hover
					text-decoration: none
	
	.banner
		background:url('../img/eduhome-01.jpg') no-repeat
		height:350px
		
		

	.search-info
		background:url('../img/eduhome-04.jpg') no-repeat
		height:350px
		background-size:100%
		margin-bottom:25px


		.tabbed-info
			background-color: rgba(0,173,238, 0.87)
			height:350px
			
			h2
				color:#fff
				text-align:center
				position: relative
				top: 45%
				transform: translateY(-45%)

	.categories
		height:800px
		h2
			background-color:rgba(0,173,238, 0.87)
			color:#fff
			font-size:28pt
			height:60px
			margin-top:0
			padding-top:10px
			padding-bottom:10px

		.data
			background-color:rgba(0,173,238, 0.87)
			width:100%
			height:150px
			position:absolute
			bottom:0
			padding-top:10px

			ul
				float:left
				margin-left:10%
				
				li
					a
						color:#fff




		.level
			background:url('../img/eduhome-03.jpg') no-repeat
			height:350px
			position:relative


		.articles
			background:url('../img/eduhome-04.jpg') no-repeat
			height:350px
			position:relative

			
			h2
				background-color:rgba(237,46,124,0.87)
			.data
				background-color:rgba(237,46,124,0.87)

		.success	
			background:url('../img/eduhome-05.jpg') no-repeat
			height:350px
			position:relative


		.subject
			background:url('../img/eduhome-02.jpg') no-repeat
			height:350px
			position:relative

