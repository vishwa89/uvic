#immigrationHomepage
	.heading-tabs
		border:0
		height:40px
		width: 90%
		margin-left:7%
		

		li
			padding: 0
			margin: -2px
			width:15%
			text-align: center
			height:42px
			padding-top:10px


			&:nth-child(1)
				width:19%
				.icons
					background-image:url('../img/visa_policy_icon.png')
					height:22px
					width:30px

				a
					padding-right:5% !important 

			&:nth-child(3)
				.icons
					background-image:url('../img/lifeinuk.png')
					height:23px
					width:23px

			&:nth-child(4)
				.icons
					background-position: 30% 0

			&:nth-child(5)
				.icons
					background-position: 63% 0
				a
					padding-right:5% !important
	

			&:last-child
				border-right:0
				width:17%
				.icons
					background-position: 100% 0

				a
					border-right:0 !important

			&.active,&:hover,&:focus
				background-image:url('../img/down_arrow.png')
				background-repeat:no-repeat	
				background-position:49% 1%

				&:nth-child(1)
					background-position:45% 4%

				&:nth-child(3)
					background-position:45% 7%

				a
					font-weight:800



			a
				color:#929497
				font-size:14pt
				line-height: 21px
				border-right:1px solid #929497
				padding-right:8%





				&:hover
					text-decoration: none
 
	.banner
		background:url('../img/banner.jpg') no-repeat
		height:350px
		background-size:100%


		h2
			position: relative
			top: 45%
			margin-top:10px
			transform: translateY(-45%)
