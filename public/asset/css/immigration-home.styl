#immigrationHomepage
	.heading-tabs
		border:0
		height:40px
		width: 960px
		margin-left:12%
		

		li
			padding: 0
			margin: -3px
			width:16%
			text-align: center
			height:42px
			padding-top:10px


			&:nth-child(1)
				width:20%
				.icons
					background-image:url('../img/visa_policy_icon.png')
					height:22px
					width:30px

				a
					padding-right:5% !important 

			&:nth-child(3)
				.icons
					background-image:url('../img/lifeinuk.png')
					height:23px
					width:23px

			&:nth-child(4)
				.icons
					background-position: 30% 0

			&:nth-child(5)
				.icons
					background-position: 63% 0
				a
					padding-right:4% !important
	

			&:last-child
				border-right:0
				width:17%
				.icons
					background-position: 100% 0

				a
					border-right:0 !important

			&.active,&:hover,&:focus
				background-image:url('../img/down_arrow.png')
				background-repeat:no-repeat	
				background-position:49% 1%

				&:nth-child(1)
					background-position:45% 7%

				&:nth-child(3)
					background-position:45% 10%

				a
					font-weight:800



			a
				color:#929497
				font-size:12pt
				line-height: 21px
				border-right:1px solid #929497
				padding-right:8%





				&:hover
					text-decoration: none
 
	.banner
		background:url('../img/banner_immi.jpg') no-repeat
		height:350px
		background-size:100%


		
	.content
		width:960px
		margin-left:12%

	.categories
		margin:0
		padding:0
		margin-top:10px
		margin-bottom:0
		
		.student,.family,.immigration,.citizenship,.work,.visiting
			margin-left:2.1px
			width:158px
			height:261px
			float:left
			



		h5
			font-size:16pt
			background-color:rgba(40,37,97,0.87)
			color:#fff
			height:45px
			margin-top:0
			padding:10px 0 5px 15px
			font-weight:800

		p
			background-color:rgba(236,28,36,0.87)
			height:200px
			color:#fff
			bottom:0
			position: absolute
			width:80%
			right:0
			font-size:11pt
			padding:5px
			margin:0

			a
				display:block
				margin-top:5px
				color:#fff
				font-size:11pt
		
		
		.student
			background:url('../img/student.jpg') no-repeat
