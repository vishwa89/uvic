#immigrationHomepage
	.heading-tabs
		border:0
		height:22px
		width: 80%
		margin-left:10%
		

		li
			padding: 0
			margin: 0
			width:15%
			text-align: center
			border-right:1px solid #929497
			height:21px


			&:nth-child(1)
				width:19%

			&:nth-child(4)
				.icons
					background-position: 30% 0

			&:nth-child(5)
				.icons
					background-position: 63% 0
	

			&:last-child
				border-right:0
					
				.icons
					background-position: 100% 0



			a
				color:#929497
				font-size:14pt
				line-height: 21px



				&:hover
					text-decoration: none
 
	.banner
		background:url('../img/banner.jpg') no-repeat
		height:350px
		background-size:100%


		h2
			position: relative
			top: 45%
			margin-top:10px
			transform: translateY(-45%)
			color:#fff
			text-align:center
			font-size:33pt
			font-weight:600
			text-shadow:0 0 5px rgba(0,0,0,1),9px 8px 30px rgba(0,0,0,0.5),-9px 8px 30px rgba(0,0,0,0.5),9px -8px 30px rgba(0,0,0,0.5),-9px -8px 30px rgba(0,0,0,0.5),9px 8px 50px rgba(0,0,0,0.3),-9px 8px 50px rgba(0,0,0,0.3),9px -8px 50px rgba(0,0,0,0.3),-9px -8px 50px rgba(0,0,0,0.3)

	

	.categories
		margin-top:10px
		margin-bottom:30px
		margin-left:3%
		margin-right:3%
		.student,.family,.immigration,.citizenship,.work,.visiting
			height:350px
			margin-left:10px
			width:15%
			float:left



		h5
			font-size:25pt
			background-color:rgba(40,37,97,0.87)
			color:#fff
			height:45px
			margin-top:0
			padding:5px 0 5px 10px

		p
			background-color:rgba(236,28,36,0.87)
			height:200px
			color:#fff
			bottom:10%
			position: absolute
			width:80%
			right:0
			font-size:13pt
			padding:5px

			a
				display:block
				margin-top:5px
				color:#fff
				font-size:13pt
		
		
		.student
			background:url('../img/student.jpg') no-repeat
			position:relative
			
		.family
			background:url('../img/family.jpg') no-repeat
			position:relative
			
			
		

		.immigration
			background:url('../img/immigration.jpg') no-repeat
			position:relative
			
			
		.citizenship
			background:url('../img/eu.jpg') no-repeat
			position:relative
			
		

		.work
			background:url('../img/work.jpg') no-repeat
			position:relative
			
			
		.visiting
			background:url('../img/visiting.jpg') no-repeat
			position:relative
			margin-left:0
			


	.customer-info
		color:#262261
		margin-left:3%
		margin-right:3%

		img
			margin-top:25%
			margin-left:2%
			width:100%
      


		h3
			border-bottom:1px solid #282561
			padding-bottom:10px 
			font-size:18pt
			color:#262261
			text-transform:uppercase
		p,a
			font-size:14pt
			color:#262261

		.testimonials
			padding-right:40px
			border-right:1px solid #282561
			margin-bottom:30px
			.icons
				background-position:0 44%
				height:30px
				vertical-align:-26%


			h4
				text-transform:uppercase
				font-size:18pt
				color:#262261


				.icons
					background-position:30% 44%
				


		.successful
			padding-left:40px
			
			margin-bottom:30px
			.icons
				background-position:0 70%
				height:30px
				vertical-align:-26%


			h4
				font-size:18pt

				.icons
					background-position:30% 69%
					

	.process-info
		margin-left:3%
		margin-right:3%
		height:400px
		margin-bottom:-61px


		.header
			font-size:18pt
			border-bottom:1px solid #fff
			color:#fff

		p,h4,a
			font-size:14pt
			color:#fff
		
		a
			padding-top:5px

		.faq-bg,.policy-bg,.qa-bg
			background-image:url("../img/banner.jpg")
			background-repeat:no-repeat
			background-size:99% 100%
			height:400px

		.icons
			background-image:url("../img/icon3.png")
			height:30px
			vertical-align:-10%



		.faq,.policy
			border-bottom:1px solid #fff
			background-color:rgba(40,37,97,0.8)
			height:100%
			width:99%
			padding-left:10px
			padding:30px
			
		.qa
			background-color:rgba(236,28,36,0.8)
			width:99%
			height:100%
			padding:30px
			

			
			
