#studentVisa
	padding-left:15px
	padding-right:15px
	h3
		margin-top:0
		padding-top:20px
		font-size:16pt
		font-weight:600
		border-top:1px solid #929497
	.sidebar
		margin-right:5%

		ul
			border-top:1px solid #929497
			padding-top:20px
			border-bottom:0

			li
				padding:5px
				margin:0
				&.header
					color:#fff
					background-color:#929497
					font-size:14pt
					margin:0


				a
					font-size:14pt
					color:#929497
					padding:5px
					margin:0
					border-radius:0
					outline:0
					border:0
						

					&:hover,&:focus
						border:0
						outline:0
						background-color:transparent
						border-radius:0
						padding:5px
						margin:0


				&.active
					a
						border:0
						color:#000
						background-color:transparent

