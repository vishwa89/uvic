#aboutUs
	.heading-tabs
		border:0
		height:40px
		width: 90%
		margin-left:7%

		&.bottom
			margin-top:20px
			height:50px
			padding-top:0
			border-top:1px solid #929497
			width:90%
			margin-left:5%
			padding-left:2%
			margin-right:5%
			margin-bottom:-70px

			li
				&:nth-child(5)
					width:16%
			

		

		li
			padding: 0
			margin: -2px
			width:15%
			text-align: center
			height:42px
			padding-top:10px
			
			&:nth-child(1)
				width:19%
				.icons
					background-image:url('../img/visa_policy_icon.png')
					height:22px
					width:30px

				a
					padding-right:5% !important 

			&:nth-child(3)
				.icons
					background-image:url('../img/lifeinuk.png')
					height:23px
					width:23px
				

		

			&:nth-child(4)
				.icons
					background-position: 30% 0

			&:nth-child(5)
				.icons
					background-position: 63% 0
				a
					padding-right:5% !important
	

			&:last-child
				border-right:0
				width:17%
				.icons
					background-position: 100% 0

				a
					border-right:0 !important

			&.active,&:hover,&:focus
				background-image:url('../img/down_arrow.png')
				background-repeat:no-repeat	
				background-position:49% 1%

				&:nth-child(1)
					background-position:45% 4%

				&:nth-child(3)
					background-position:45% 7%

				a
					font-weight:800


			a
				color:#929497
				font-size:14pt
				line-height: 21px
				border-right:1px solid #929497
				padding-right:8%


				&:hover
					text-decoration: none
	
	.go-back
		font-size:12pt
		padding-top:10px
		padding-bottom:10px
		color:#929497
		margin-top:0
		margin-bottom:10px
		border-top:1px solid #929497
		border-bottom:1px dotted #929497
		margin-left:5%
		margin-right:5%
		.breadcrumb
			margin:0
			padding:0
			border-radius:0
			border:0
			background-color:transparent
			li
				a
					font-size:12pt
					color:#929497
					
					&:hover
						text-decoration:none

	.sidebar
		margin-left:5%
		height:700px

		&.col-lg-2
			width:19% 
		
		
		ul
			
			li
				margin:0
				border-top:1px dotted #929497
				
				
				font-size:16pt
				padding:0
				background-color:#f5f5f5
				height:30px


				a
					color:#929497
					padding:0
					padding-left:5%
					display:inline-block

					&:hover,&:focus
						background-color:#f5f5f5

				
				
				&.header
					background-color:#929497
					height:55px
					padding-top:12px
					border:0
					

					.icons
						height:25px
						width:35px
						margin-left:5%

							
					&.uvic
						.icons
							background-image:url("../img/icon3.png")
							height:30px
	

					a

						color:#fff
						font-size:16pt
						&:hover,&:focus
							background-color:#282561


				&.active
					background-color:transparent

					a
						color:#282561

						&:hover,&:focus
							background-color:transparent
	.about-us-article
		margin-left:3%
		h4
			font-size:20pt
			border-bottom:1px solid #929497
			&.date
				text-align:right

		p
			font-size:14pt

		img
			width:100%

	
		.contact
			img
				width:99%
